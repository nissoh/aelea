{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["bun"]
        },
        "install": {
          "cmds": ["echo 'Skipping install - using pre-built files'"]
        },
        "build": {
          "cmds": ["echo 'Skipping build - using pre-built files'"]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "bunx serve@latest dist -s -l $PORT",
    "restartPolicyType": "NEVER"
  }
}