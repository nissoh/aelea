{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["bun"]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "bunx serve dist -s -l $PORT",
    "restartPolicyType": "NEVER"
  }
}