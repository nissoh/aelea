{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ES2020",
    "lib": [
      "ES2022",
      "DOM"
    ],
    "types": [
      "vite/client"
    ],
    "module": "ESNext",
    /* Bundler mode */
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    /* Linting */
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noEmit": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    /* Path Aliases */
    "paths": {}
  },
  "references": [
    {
      "path": "../lib"
    }
  ],
  "include": [
    "./src",
  ]
}