{
  "compilerOptions": {
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "forceConsistentCasingInFileNames": true,
    "declarationMap": true,
    "target": "ES2018",
    "module": "es6",
    "moduleResolution": "node",
    "composite": true,
    "incremental": true,
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "baseUrl": ".",
    "pretty": true,
    "lib": [
      "DOM",
      "es2020"
    ],
    "paths": {
      "utils/*": [
        "utils/*"
      ]
    }
  },
  "exclude": [
    "**/*.test.ts",
    "**/.dist"
  ]
}