{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "bun install && bun run build",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["nodejs_22", "bun"]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "bunx serve website/dist -s -l $PORT",
    "restartPolicyType": "NEVER"
  }
}